<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical" >

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:1"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/register"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fp_register_fingerprint"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/validate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fp_validate_fingerprint"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:N"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/register2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fp_register_fingerprint"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/validate2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fp_validate_fingerprint"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/clear_flash"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fp_clear_flash"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/calibration"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fp_calibration"
                    android:textColor="#000000"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/btn1_my"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fp_import_finger"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/backRegister"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/back"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/background_dark" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/bt_registe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fp_register_fingerprint"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/bt_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/bt_registe"
                        android:text="@string/fp_save_model"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <EditText
                        android:id="@+id/et_fingerId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:hint="ID"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/bt_compares"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/et_fingerId"
                        android:text="@string/fp_compares"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/bt_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/bt_compares"
                        android:text="@string/fp_clear_flash"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/upfail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/fingerprintImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>